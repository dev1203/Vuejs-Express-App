<form method="POST" action="/admin/add" class="container margin-top--md">
    <h3>Add New Product</h3>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="productTitle">Title</label>
            <input required type="text" name="productTitle" class="form-control" id="productTitle" placeholder="Product Title">
        </div>
        <div class="form-group col-md-6">
            <label for="productPrice">Price</label>
            <input required type="text" name="productPrice" class="form-control" id="productPrice" placeholder="Price">
        </div>
    </div>
    <div class="form-group">
        <label for="productDescription">Description</label>
        <textarea required type="text" name="productDescription" class="form-control" id="productDescription" placeholder="Product Description"> </textarea>
    </div>
    <div class="form-group">
        <label for="productSize">Size</label>
        <select required id="productSize" name="productSize"  class="form-control">
            <option selected>Choose...</option>
            <option value="xs">XS</option>
            <option value="s">S</option>
            <option value="m">M</option>
            <option value="l">L</option>
            <option value="XL">XL</option>
            <option value="XXL">XXL</option>
        </select>
    </div>
    <div class="form-group">
        <div class="file-loading">
            <input id="file-1" type="file" name="file" multiple class="file" data-overwrite-initial="false" data-min-file-count="2">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>